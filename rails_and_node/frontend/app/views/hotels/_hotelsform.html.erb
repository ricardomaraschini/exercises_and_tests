<div class="form-group">
<%= simple_form_for @hotel do |f| %>
  <%= f.input :name, required: true, label: "Name", :input_html => { :class => "form-control"} %>
  <%= f.input :address, required: true, label: "Address", :input_html => { :class => "form-control"} %>
  <%= f.input :accomodationType, required: true, label: "Accomodation type", :input_html => { :class => "form-control"} %>
  <%= f.input :starRating, required: true, collection: 1..5, label: "Rating", :input_html => { :class => "form-control"} %>
  <br />
  <%= link_to "Back", list_path, class:"btn btn-default" %>
  <%= f.button :submit, :class => "btn btn-default" %>
<% end %>
</div>
